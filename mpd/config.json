{
  "name": "MPD Audio Server",
  "version": "1.0.0",
  "slug": "mpd",
  "description": "Music Player Daemon is a free and open source music player",
  "startup": "application",
  "boot": "auto",
  "host_network": false,
  "audio": true,
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
	"armhf",
	"i386"
  ],
  "codenotary": "infobitas@gmail.com",  
  "devices": [
    "/dev/snd"
  ],
  "options": {
	"media_folder": "/media/mpd/media",
	"playlist_folder": "/media/mpd/playlists",
	"volume_normalization": false,
	"httpd_output": false,	
    "audio_output": "alsa",
    "audio_device": "default",
    "mixer_type": "software",
    "input_device": "hw:1,0",
    "bitrate": "320",
    "format": "44100:16:2"	
  },
  "schema": {
	"media_folder": "match(/share/.+|/media/.+|(smb|nfs)://.+)",
	"playlist_folder": "match(/share/.+|/media/.+|(smb|nfs)://.+)",
	"volume_normalization": "bool",
	"httpd_output": "bool",
	"verbose": "bool",
	"custom_config": "match(/share/mpd/.+)",
    "audio_output": "str",
    "audio_device": "str",
    "mixer_type": "str",
    "input_device": "str",
    "bitrate": "int",
    "format": "str"	
  },
  "image": "ghcr.io/Infobitas/HomeAssistant-Addons/mpd-{arch}",
  "map": ["config", "media", "share"], 
  "ports": {
    "6600/tcp": 6600
  },
  "ports_description": {
    "6600/tcp": "MDP Connection"
  },
  "privileged": [
    "SYS_ADMIN",
    "SYS_RAWIO"
  ],  
  "url": "https://github.com/Infobitas/HomeAssistant-Addons"
}
